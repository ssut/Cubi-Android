<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <WebView
        android:id="@+id/wvComicView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/viewComicViewTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="@drawable/gradient_comic_detail"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvComicViewTitle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="@string/comicdetail_title"
                android:textSize="14dp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_left" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_right" />

            <ImageButton
                android:id="@+id/ibComicViewShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_share" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/viewComicViewBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:alpha="0.9"
            android:background="@drawable/gradient_comic_detail"
            android:clickable="true"
            android:focusable="true"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/viewComicViewCommentRating"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:src="@drawable/icon_pencil" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical|left"
                        android:text="@string/comicdetail_comment"
                        android:textSize="@dimen/comicdetail_fontsize" />

                    <TextView
                        android:id="@+id/tvComicViewCommentNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical|left"
                        android:text="(35)"
                        android:textSize="@dimen/comicdetail_fontsize" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_left" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line_right" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:src="@drawable/icon_rating" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical|left"
                        android:text="@string/comicdetail_rating"
                        android:textSize="@dimen/comicdetail_fontsize" />

                    <TextView
                        android:id="@+id/tvComicViewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical|left"
                        android:text="(9.9)"
                        android:textSize="@dimen/comicdetail_fontsize" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_left" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_right" />

            <ImageButton
                android:id="@+id/ibComicViewPrev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_prev" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_left" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_right" />

            <ImageButton
                android:id="@+id/ibComicViewNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_next" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>