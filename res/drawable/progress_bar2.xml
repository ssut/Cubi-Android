<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:endColor="@color/darkgray"
                android:startColor="@color/darkgray" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:endColor="@color/verydarkgray"
                    android:startColor="@color/verydarkgray" />

                <stroke
                    android:width="0dp"
                    android:color="#000000" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:endColor="@color/green_color"
                    android:startColor="@color/green_color" />

                <stroke
                    android:width="0dp"
                    android:color="#000000" />
            </shape>
        </clip>
    </item>

</layer-list>